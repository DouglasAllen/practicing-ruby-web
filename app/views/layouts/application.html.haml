!!! 5
%html{:lang => 'en'}
  %head
    %title
      = yield(:title).blank? ? controller_name.humanize : yield(:title)
      \- Practicing Ruby

    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag

    = render :partial => "shared/ios_icon"

    = yield(:header_bottom)

  %body
    = render :partial => "shared/flash", :locals => {:flash => flash}

    = render :partial => "shared/upper_navigation"
    #content
      #header
        %h1= link_to "Practicing Ruby", home_path
        .tagline
          An eclectic journal for the dedicated hacker
          %br
          lovingly curated by
          = link_to "Gregory Brown", "http://twitter.com/practicingruby"
      = render :partial => "shared/broadcasts"
      = yield
